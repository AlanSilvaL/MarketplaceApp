<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MarketplaceApp.Controls"
             xmlns:vm="clr-namespace:MarketplaceApp.ViewModel"
             x:Class="MarketplaceApp.Views.DetailPage"
             x:DataType="vm:DetailPageViewModel"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <controls:CustomDetailPageControl 
        ProductImage="{Binding Product.Image}"
        ProductTitle="{Binding Product.Title}"
        ProductPrice="{Binding Product.Price}"
        ProductRating="{Binding Product.Rating.Rate}"
        ProductCategory="{Binding Product.Category}" />
</ContentPage>
