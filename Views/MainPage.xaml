<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketplaceApp.Views.MainPage"
             xmlns:vm="clr-namespace:MarketplaceApp.ViewModel"
             xmlns:wrapper="clr-namespace:MarketplaceApp.Model.Wrappers"
             xmlns:model="clr-namespace:MarketplaceApp.Model"
             x:DataType="vm:MainPageViewModel"
             Title="">


    <Grid RowDefinitions="auto,*,auto">

        <!-- Banner -->
        <Image
            Source="banner.jpg"
            Aspect="AspectFill"
            HeightRequest="240"
            Grid.Row="0"/>

        <Grid Grid.Row="0" Padding="10" RowDefinitions="auto,auto,auto,auto,auto" ColumnDefinitions="*,*,auto,auto">
            <!-- Search Bar -->
            <SearchBar
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Placeholder="Search Task..."
                Margin="0,10,0,20"/>

            <!-- Shoping Cart -->
            <Button
                Grid.Column="2"
                ImageSource="shopingbag.png"
                BackgroundColor="Transparent"
                HeightRequest="50"
                WidthRequest="50"
                Padding="11">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="LightGray"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

            <!-- Comments -->
            <Button
                Grid.Column="3"
                BackgroundColor="Transparent"
                ImageSource="textbubble.png"
                HeightRequest="50"
                WidthRequest="50"
                Padding="10">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="LightGray"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

            <Label 
                Grid.Row="1" 
                Grid.Column="0"
                Text="#FASHION DAY"
                FontSize="10"
                FontFamily="Arial"
                FontAttributes="Bold"
                VerticalOptions="Center" />

            <Label 
                Grid.Row="2"
                Grid.Column="0" 
                Text="80% OFF"
                FontSize="30"
                FontFamily="Arial"
                FontAttributes="Bold"
                VerticalOptions="Center" />

            <Label 
                Grid.Row="3"
                Grid.Column="0"
                Text="Discover fashion that suits to your style"
                FontSize="10"
                Opacity=".75"
                FontFamily="Arial"
                VerticalOptions="Center" />

            <Button
                Grid.Row="4"
                Grid.Column="0"
                BackgroundColor="#2B2D41"
                FontSize="10"
                Text="Check this out"
                Margin="-40,15,0,10"
                HeightRequest="35"
                WidthRequest="95"/>
        </Grid>

